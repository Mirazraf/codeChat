{
  "name": "codechat",
  "version": "1.0.0",
  "description": "Real-time chat application for developers",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm install && npm run build",
    "start": "cd backend && npm start",
    "render-build": "cd frontend && npm install --production=false && npm run build && cd ../backend && npm install --production=false",
    "pm2:start": "cd backend && npm run pm2:start",
    "pm2:stop": "cd backend && npm run pm2:stop",
    "pm2:logs": "cd backend && npm run pm2:logs",
    "pm2:status": "cd backend && npm run pm2:status"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": ["chat", "websocket", "react", "nodejs"],
  "author": "Miraz Rafi",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
